#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <assert.h>
#include <fcntl.h>
#include "test.h"
#include "util.h"
#include "tagdb.h"

%(test TagDB no_file_on_new)
{

    char db_name[] = "/tmp/test.db";
    TagDB *db = tagdb_new(g_strdup(db_name));
    tagdb_destroy(db);
    int r = open(db_name, O_RDONLY);
    CU_ASSERT_TRUE(r > 0);
    unlink(db_name);
}

int main ()
{
   %(run_tests);
}


